<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_16sdp"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_4sdp"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_course_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp">


            <ImageView
                android:id="@+id/im_course"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/homework"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:text="@string/course_name"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintBottom_toBottomOf="@+id/im_course"
                app:layout_constraintStart_toEndOf="@+id/im_course"
                app:layout_constraintTop_toTopOf="@+id/im_course" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp">


            <ImageView
                android:id="@+id/im_calender"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/calendar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_calender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:text="@string/course_date"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="@+id/im_calender"
                app:layout_constraintStart_toEndOf="@+id/im_calender"
                app:layout_constraintTop_toTopOf="@+id/im_calender" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/onlineLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp">


            <ImageView
                android:id="@+id/im_state"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/medicalappointment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:text="@string/Online"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintBottom_toBottomOf="@+id/im_state"
                app:layout_constraintStart_toEndOf="@+id/im_state"
                app:layout_constraintTop_toTopOf="@+id/im_state" />

            <ImageView
                android:id="@+id/im_arrow_down"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:src="@drawable/arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_see_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16sdp"
                android:text="@string/more_details"
                android:textSize="@dimen/_10ssp"
                android:layout_marginEnd="@dimen/_4sdp"
                app:layout_constraintBottom_toBottomOf="@+id/im_state"
                app:layout_constraintEnd_toStartOf="@+id/im_arrow_down"
                app:layout_constraintTop_toTopOf="@+id/im_state" />

        </androidx.constraintlayout.widget.ConstraintLayout>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/constraint_displaymore">
    <TextView
        android:id="@+id/goalsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Goals: "
        android:textColor="@color/background_purple"
        android:textSize="@dimen/_12ssp"
        android:layout_marginStart="@dimen/_52sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        app:layout_constraintTop_toBottomOf="@+id/goalsTV"
        android:id="@+id/firstGoalEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_52sdp"
        android:background="@null"
        android:text="1- ..............."
        android:textColor="@color/background_purple"
        android:textSize="@dimen/_12ssp"/>

    <EditText
        app:layout_constraintTop_toBottomOf="@+id/firstGoalEt"
        android:id="@+id/secondGoalEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_52sdp"
        android:background="@null"
        android:text="2- ..............."
        android:textColor="@color/background_purple"
        android:textSize="@dimen/_12ssp"/>

    <EditText
        app:layout_constraintTop_toBottomOf="@+id/secondGoalEt"
        android:id="@+id/thirdGoalEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_52sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@null"
        android:text="3- ..............."
        android:textColor="@color/background_purple"
        android:textSize="@dimen/_12ssp"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/registrationBtn"
        android:backgroundTint="@color/background_purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textAllCaps="true"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/white"
        app:cornerRadius="@dimen/_18sdp"
        android:layout_gravity="bottom|end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginVertical="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@+id/thirdGoalEt"
        />


</androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>
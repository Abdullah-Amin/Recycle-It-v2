<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.CaptionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="@string/cancel"
            android:textColor="@color/background_purple"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_8sdp"
            android:text="@string/post"
            android:textSize="@dimen/_14ssp"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/im_person"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/human"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_register" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/captionEt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxHeight="@dimen/_80sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:hint="@string/write_a_caption"
            android:background="@null"
            android:gravity="top"
            android:layout_marginEnd="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/im_person"
            app:layout_constraintTop_toTopOf="@+id/im_person"

            />

        <ImageView
            android:id="@+id/itemImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:src="@drawable/download"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/_100sdp"
            app:layout_constraintTop_toBottomOf="@id/captionEt"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:scrollbarSize="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/background_purple"
                    app:cardCornerRadius="@dimen/_12sdp"
                    android:layout_marginHorizontal="@dimen/_6sdp"
                    android:layout_marginVertical="@dimen/_6sdp">

                    <ImageView
                        android:id="@+id/uploadImageBtn"
                        android:layout_width="@dimen/_64sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:src="@drawable/camera" />

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_6sdp"
                    android:layout_marginVertical="@dimen/_6sdp">

                    <ImageView
                        android:id="@+id/reduceImage"
                        android:layout_width="@dimen/_64sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:src="@drawable/recycle_blue"
                        android:scaleType="fitXY" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_6sdp"
                    android:layout_marginVertical="@dimen/_6sdp">

                    <ImageView
                        android:id="@+id/girlsImage"
                        android:layout_width="@dimen/_64sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:src="@drawable/recycle_blue"
                        android:scaleType="fitXY" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_6sdp"
                    android:layout_marginVertical="@dimen/_6sdp">

                    <ImageView
                        android:id="@+id/earthImage"
                        android:layout_width="@dimen/_64sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:src="@drawable/recycle_blue"
                        android:scaleType="fitXY"
                        />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_6sdp"
                    android:layout_marginVertical="@dimen/_6sdp">

                    <ImageView
                        android:id="@+id/trashImage"
                        android:layout_width="@dimen/_64sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:src="@drawable/recycle_blue"
                        android:scaleType="fitXY" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>